<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <table  class="table">
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>      
        <td><h4><%= link_to idea.name, idea %></h4></td>
       <td> <%= idea.description %></td>
      </div>
    <% end %>
  </div>
  </table>
<% end %>